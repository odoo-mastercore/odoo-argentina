<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="res_config_settings_view_form">
        <field name="name">res.config.settings.view.form.inherit.l10n_ar_afip_ws</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']/div" position="after">
                <field name="l10n_ar_country_code" invisible="1"/>
                <h2 attrs="{'invisible':[('l10n_ar_country_code', '!=', 'AR')]}">Argentina Localization</h2>
                <div class="row mt16 o_settings_container" name="argentina_localization">
                </div>                   
            </xpath>
             <div name="argentina_localization" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="refresh_activities_from_padron" string="Datos del Padron AFIP" />
                        <div class="text-muted">
                            Al hacer click en los enlaces de abajo se van a 
                            sincronizar desde AFIP las Actividades, Impuestos y 
                            Conceptos. Estos datos se utilizan para clasificar 
                            al partner al consultar sus datos en el padron AFIP.
                        </div>
                        <div class="content-group">
                            <button name="refresh_activities_from_padron" string="-> Actividades" type="object" class="oe_link"/>
                            <button name="refresh_taxes_from_padron" string="-> Impuestos" type="object" class="oe_link"/>
                            <button name="refresh_concepts_from_padron" string="-> Conceptos" type="object" class="oe_link"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
